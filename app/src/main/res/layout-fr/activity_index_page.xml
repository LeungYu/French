<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/index_page_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glf.roideladictee.IndexPage">
    <LinearLayout
        android:id="@+id/index_page_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#199900"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/index_page_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_user_logo"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                app:srcCompat="@drawable/user_logo"/>
            <TextView
                android:id="@+id/index_page_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:text="@string/index_page_loading"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#EAEAEA"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_logout"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:paddingRight="-20dp"
                app:srcCompat="@drawable/logout"/>
            <ImageView
                android:id="@+id/index_page_exit"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/exit"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:background="#EAEAEA"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/index_page_practise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="22dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/index_page_button"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_practise_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/practise"/>
            <TextView
                android:id="@+id/index_page_practise_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:text="@string/index_page_practise"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#199000"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_page_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="22dp"
            android:paddingRight="42dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/index_page_button"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_contest_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/contest"/>
            <TextView
                android:id="@+id/index_page_contest_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:text="@string/index_page_contest"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#199000"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_page_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/index_page_button"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_join_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/join"/>
            <TextView
                android:id="@+id/index_page_join_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="@string/index_page_join"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#199000"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_page_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/index_page_button"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/index_page_dictionary_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/dictionary"/>
            <TextView
                android:id="@+id/index_page_dictionary_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:text="@string/index_page_dictionary"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#199000"
                android:gravity="center"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
