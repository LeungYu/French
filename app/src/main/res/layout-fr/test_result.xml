<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/test_result_layout"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="6%"
        android:id="@+id/head_bar"
        android:background="#199900">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/test_result_title"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="24%"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#001e4e"
            android:id="@+id/test_result_score_notes"
            android:text="@string/test_result_score_notes"
            android:textSize="24sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#da1911"
            android:id="@+id/test_result_score"
            android:text="98"
            android:textSize="24sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#da1911"
            android:id="@+id/test_result_score_unit"
            android:text="@string/score_unit"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="42%"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_notes"
                android:text="@string/test_sum_word_notes"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word"
                android:text="100"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_unit"
                android:text="@string/word_unit"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_right_notes"
                android:text="@string/test_sum_word_right_notes"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_right"
                android:text="98"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_right_unit"
                android:text="@string/word_unit"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_wrong_note"
                android:text="@string/test_sum_word_wrong_notes"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#da1911"
                android:id="@+id/test_sum_word_wrong"
                android:text="2"
                android:textSize="18sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#001e4e"
                android:id="@+id/test_sum_word_wrong_unit"
                android:text="@string/word_unit"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        app:layout_heightPercent="6%"
        app:layout_aspectRatio="300%"
        app:layout_marginTopPercent="70%"
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/ok"
        android:background="@drawable/green_button"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/test_result_ok" />
</android.support.percent.PercentRelativeLayout>